<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio_tutores_mnt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".inicio.inicioTutoresMnt">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mainToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/logo_comercio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="75dp"
        android:contentDescription="logo_comercio"
        android:src="@drawable/logo_comercio_v2" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/inicio_tutores_mnt_btn_add_foto_perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_add_photo"
        app:civ_border_color="@color/gris_claro"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inicio_tutores_mnt_botones"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inicio_tutores_mnt_btn_panel"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/btn_azul"
            android:fontFamily="@font/mulish_ergular"
            android:gravity="center"
            android:text="@string/inicio_panel_control"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/inicio_tutores_mnt_btn_crear_ticket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inicio_tutores_mnt_btn_historial_ticket"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="28dp"
            android:background="@drawable/btn_azul"
            android:fontFamily="@font/mulish_ergular"
            android:gravity="center"
            android:text="@string/inicio_historial_ticket"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/inicio_tutores_mnt_btn_cerrar_sesion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inicio_tutores_mnt_btn_estado_ticket"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="28dp"
            android:background="@drawable/btn_azul"
            android:fontFamily="@font/mulish_ergular"
            android:gravity="center"
            android:text="@string/inicio_estado_ticket"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/inicio_tutores_mnt_btn_historial_ticket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inicio_tutores_mnt_btn_validar_ticket"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/btn_azul"
            android:fontFamily="@font/mulish_ergular"
            android:gravity="center"
            android:text="@string/inicio_validar_ticket"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/inicio_tutores_mnt_btn_estado_ticket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inicio_tutores_mnt_btn_crear_ticket" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inicio_tutores_mnt_btn_crear_ticket"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_azul"
            android:fontFamily="@font/mulish_ergular"
            android:gravity="center"
            android:text="@string/inicio_crear_ticket"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inicio_tutores_mnt_btn_panel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inicio_tutores_mnt_btn_cerrar_sesion"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_gris"
            android:fontFamily="@font/mulish_ergular"
            android:gravity="center"
            android:text="@string/inicio_cerrar_sesion"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inicio_tutores_mnt_btn_historial_ticket" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>